function cdpg_to_utf8() {
    # set system codepage from 852 (latin II) to 65001 (utf-8)
    cmd /c chcp 65001 &> /dev/null
}


function cdpg_to_latin2() {
    # set system codepage 65001 (utf-8) to 852 (latin II)
    cmd /c chcp 852 &> /dev/null
}